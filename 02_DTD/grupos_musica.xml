<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE grupos_musica [
    <!ELEMENT grupos_musica (grupo+)>

    <!ELEMENT grupo (nombre,integrantes,album_premiados,pais, anio_formacion, discos_vendidos, genero, estado?)>
    
    <!ATTLIST grupo id CDATA #REQUIRED>
    <!ELEMENT nombre (#PCDATA)>
    <!ELEMENT integrantes (nombre+)>
    <!ELEMENT album_premiados (album+)>
    <!ELEMENT pais (#PCDATA)>
    <!ELEMENT anio_formacion (#PCDATA)>
    <!ELEMENT discos_vendidos (#PCDATA)>
    <!ELEMENT genero (#PCDATA)>
    <!ELEMENT estado (#PCDATA)>

    <!ELEMENT album (nombre, discografica, canciones, anio)>
    <!ATTLIST album id CDATA #REQUIRED>    
    
    <!ELEMENT discografica (#PCDATA)>
    <!ELEMENT anio (#PCDATA)>
    <!ELEMENT canciones (cancion+)>
    <!ELEMENT cancion (#PCDATA)>
    <!ATTLIST cancion id CDATA #REQUIRED>

]>

